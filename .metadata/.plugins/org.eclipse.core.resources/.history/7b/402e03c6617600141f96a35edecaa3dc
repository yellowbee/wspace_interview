package com.common.graph;

class Vertex implements Comparable<Vertex> {
	public String name;
	public int value;
	public Vertex prev; // this field is for retoring a shortest path, such as in Dijkstra's algorithm
	public Edge[] adjacencies;
	
	public Vertex(String name, int value) {
		this.name = name;
		this.value = value;
	}
	
	@Override
	public int compareTo(Vertex v) {
		return Integer.compare(this.value, v.value);
	}
}

class Edge {
	public Vertex target;
	public int weight;
	
	public Edge(Vertex target, int weight) {
		this.target = target;
		this.weight = weight;
	}
}
public class Graph {
	public Vertex[] graph;
}
